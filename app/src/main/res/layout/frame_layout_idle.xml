<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/idle_ll_bottom">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView

                android:layout_gravity="center_horizontal"
                android:src="@drawable/equipment_ble_log1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idle_tv_info"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:text="请穿上服装并将设备安装在服装\n上，同时打开手机蓝牙"
                android:textColor="@color/color_text_2"
                android:textSize="@dimen/text_size_4"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/idle_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/idle_bt_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_gravity="center_horizontal"
            android:text="连接设备"
            android:background="@drawable/bt_background"
            android:textColor="@color/color_text_3"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_4"/>


        <TextView
            android:id="@+id/idle_tv_new_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_4"
            android:textSize="@dimen/text_size_7"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>
