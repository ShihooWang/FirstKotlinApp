<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_above="@+id/ll_power"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:background="@drawable/monitor_heart_bg">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:id="@+id/tv_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/color_text_1"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/tv_heart_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/color_text_2"
                    android:textSize="@dimen/text_size_5" />
                <TextView
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前心率"
                    android:textColor="@color/color_text_4"
                    android:layout_marginBottom="16dp"
                    android:textSize="@dimen/text_size_4" />
            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_power"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:layout_above="@+id/bt_monitor_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_power_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/monitor_power_4" />

            <TextView
                android:id="@+id/tv_power_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="100%"
                android:textColor="@color/color_text_1"
                android:textSize="@dimen/text_size_5" />

        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/bt_monitor_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="28dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/bt_background"
            android:text="记录心电"
            android:textColor="@color/color_text_3"
            android:textSize="@dimen/text_size_4"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
