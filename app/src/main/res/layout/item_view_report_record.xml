<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_popu_item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:background="@color/color_text_1"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_heart_monitor"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:gravity="center"
                android:text="4月13日"
                android:textColor="@color/color_text_3"
                android:textSize="@dimen/text_size_4" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:gravity="center"
                android:text="监测时长:18小时36分"
                android:textColor="@color/color_text_4"
                android:textSize="@dimen/text_size_3"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_heart_monitor_new"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="26dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="医生已复核"
            android:textColor="@color/color_text_5"
            android:textSize="@dimen/text_size_3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="@color/color_divider" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
