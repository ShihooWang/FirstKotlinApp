<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:id="@+id/id_drawerlayout"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/white"
     android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:popupTheme="@style/toolbarMenuStyle"
        app:contentInsetStart="0dp"
        >
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_back"
            android:layout_centerVertical="true"
            android:padding="16dp"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择你的性别"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/color_text_3"
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_next"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                android:id="@+id/view_female"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginLeft="28dp"
                android:paddingRight="28dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="男"
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/text_size_6" />

                <ImageView
                    android:id="@+id/iv_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_gender_pressed"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:background="@color/color_divider"/>
                <LinearLayout
                android:id="@+id/view_male"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginLeft="28dp"
                android:paddingRight="28dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="女"
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/text_size_6" />

                <ImageView
                    android:id="@+id/iv_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_gender_normal"
                    />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_next"
            android:layout_gravity="bottom"
            android:text="完成"
            android:layout_marginLeft= "28dp"
            android:layout_marginRight="28dp"
            android:layout_width= "match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:textColor="@color/color_text_1"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_4"
            android:background="@drawable/select_blue_bg_btn_next"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            />
    </RelativeLayout>
</LinearLayout>