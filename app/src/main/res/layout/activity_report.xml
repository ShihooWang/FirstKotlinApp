<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/color_title_bg"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_title_bg"
        app:contentInsetStart="0dp"
        >
        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="2018-05-02 08:36"
                android:textColor="@color/color_text_3"
                android:textSize="@dimen/text_size_5"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_img_back"
                android:layout_centerVertical="true"
                android:padding="16dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/mTabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_title_bg"
            app:tabMinWidth="100dp"
            app:tabIndicatorColor="@color/color_text_5"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="#000"
            app:tabTextColor="#5000"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/redShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_red_show"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divider"/>

    <com.classic.common.MultipleStatusView
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:id="@+id/multipleStatusView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/color_title_bg"
       app:emptyView="@layout/layout_empty_view"
       app:errorView="@layout/layout_error_view"
       app:loadingView="@layout/layout_loading_view"
       app:noNetworkView="@layout/layout_network_view">
        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.classic.common.MultipleStatusView>

</LinearLayout>