<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="分析结果："
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/text_size_4"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/text_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂未诊断"
                    android:textColor="@color/color_text_4"
                    android:textSize="@dimen/text_size_3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:id="@+id/tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="诊断医生："
                    android:textColor="@color/color_text_4"
                    android:textSize="@dimen/text_size_3"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="医生建议："
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/text_size_4"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/text_chiefAnalysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂未诊断"
                    android:textColor="@color/color_text_4"
                    android:textSize="@dimen/text_size_3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:id="@+id/tv_doctor_zg"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="主管医生："
                    android:textColor="@color/color_text_4"
                    android:textSize="@dimen/text_size_3"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="(本产品的测量结果非医疗诊断，疾病诊断请咨询专业医生)"
                android:textColor="@color/color_text_4"
                android:textSize="@dimen/text_size_2"
                android:background="@color/color_text_6"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_tj"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="心电图片段："
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/text_size_4"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="@color/color_divider"/>
                <cc.bodyplus.health.widget.MyListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_divider"
                    android:horizontalSpacing="1dp"
                    android:listSelector="@drawable/selector_list_bar"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp"
                    android:scrollbars="none"
                    android:dividerHeight="1px"
                    android:focusable="false"
                    ></cc.bodyplus.health.widget.MyListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>